<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 播放器进度条bar -->
    <style name="mp_video_player_seek_bar" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:maxHeight">3dp</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:thumbOffset">8dp</item>
    </style>

    <style name="expanded_textAppearance_message" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="collapse_textAppearance_message" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="expandedExpanded_textAppearance" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="collapsingExpanded_textAppearance" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BottomDialog">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_up</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_down</item>
    </style>

    <!-- 登录注册EditText -->
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@null</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:selectAllOnFocus">true</item>-->
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#231830</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog_activity" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- 设置是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景 -->
        <item name="android:background">@null</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/notAnimation</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>

