<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_root"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:layout_marginEnd="@dimen/item_edit_hide_width"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_edit"
        android:layout_width="@dimen/item_edit_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minHeight="@dimen/item_edit_height"
        android:minWidth="@dimen/item_edit_width"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_12sp" />

    <TextView
        android:id="@+id/tv_item_delete"
        android:layout_width="@dimen/item_edit_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minHeight="@dimen/item_edit_height"
        android:minWidth="@dimen/item_edit_width"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_12sp" />
</LinearLayout>