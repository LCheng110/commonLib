<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_video_infobar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_player_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_5dp"
            android:src="@drawable/ic_video_playstate_play" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:paddingLeft="6dp">

            <LinearLayout
                android:id="@+id/ll_info_large_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_info_large_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e7e7e7"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e7e7e7"
                    android:textSize="12sp" />

                <SeekBar
                    android:id="@+id/sb_info_large_seekbar"
                    style="@style/mp_video_player_seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxHeight="@dimen/dimen_3dp"
                    android:progressDrawable="@drawable/layer_video_seek"
                    android:thumb="@drawable/ic_video_seek_thumb" />

                <TextView
                    android:id="@+id/tv_info_large_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9f9e9e"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_info_small_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_info_small_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e7e7e7"
                    android:textSize="12sp" />

                <SeekBar
                    android:id="@+id/sb_info_small_seekbar"
                    style="@style/mp_video_player_seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxHeight="@dimen/dimen_3dp"
                    android:progressDrawable="@drawable/layer_video_seek"
                    android:thumb="@drawable/ic_video_seek_thumb" />

                <TextView
                    android:id="@+id/tv_info_small_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9f9e9e"
                    android:textSize="12sp" />

            </LinearLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/iv_screen_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

    </LinearLayout>

</merge>