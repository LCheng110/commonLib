<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical|center_horizontal"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:background="@drawable/jmui_dialog_default_style"
              android:orientation="vertical">



    <TextView
        android:id="@+id/jmui_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/jmui_resend_message_hint"
        android:textColor="#2C2C2C"
        android:textSize="16.67sp"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="@dimen/dimen_10dp"
            android:visibility="visible"
            android:id="@+id/jmui_commit_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/dialog_confirm"
            android:text="@string/jmui_resend_commit"
            android:textColor="#2C2C2C"
            android:textSize="18sp"
            />
        <Button
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:id="@+id/jmui_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/dialog_cancel"
            android:text="@string/jmui_cancel"
            android:visibility="visible"
            android:textColor="#2C2C2C"
            android:textSize="18sp"
            />



    </LinearLayout>

</LinearLayout>
