<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/jmui_send_time_txt"
        style="@style/jmui_chat_text_date_style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.citytag.base.widget.CircleImageView
            android:id="@+id/jmui_avatar_iv"
            style="@style/jmui_chat_item_receiver_avatar_style"
            android:visibility="visible"/>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_toRightOf="@id/jmui_avatar_iv"
            android:background="@drawable/order_message_bg"
            android:layout_width="226dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_15dp"
                android:textColor="#979797"
                android:textSize="@dimen/text_size_14sp"
                android:text="我和你的距离就差付款了，我已经等不及为你服务了"/>
            <TextView
                android:id="@+id/tv_order_button"
                android:paddingBottom="@dimen/dimen_8dp"
                android:paddingTop="@dimen/dimen_8dp"
                android:textSize="@dimen/text_size_12sp"
                android:gravity="center"
                android:text="点击付款"
                android:background="@drawable/order_message_text_bg"
                android:textColor="@color/black"
                android:layout_below="@id/tv_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/jmui_group_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>