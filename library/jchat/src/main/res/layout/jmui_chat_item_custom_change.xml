<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/jmui_send_time_txt"
        style="@style/jmui_chat_text_date_style"/>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:background="@drawable/order_message_bg"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_message_title"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_333333"
           />
        <ImageView
            android:id="@+id/iv_message_back"
            android:layout_margin="13dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_message_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_message_content"
            android:layout_below="@id/tv_message_title"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"

            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_message_time"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tv_message_content"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_message_introduce"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:background="@drawable/bg_message_second_under"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:textColor="@color/color_333333"

            android:layout_below="@id/tv_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/jmui_group_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
